{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "node_modules/@types",
      "./module5/angularjs-controllers/declarations/require.d.ts"
    ],
    "removeComments": true,
    "sourceMap": true,
    "module": "esnext",
    "allowJs": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "build"
  ]
}
