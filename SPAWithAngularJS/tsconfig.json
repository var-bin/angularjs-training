{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "types": [
      "node",
      "angular",
      "angular-mocks",
      "jasmine",
      "karma"
    ],
    "typeRoots": ["node_modules/@types"],
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "allowJs": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "build"
  ]
}
