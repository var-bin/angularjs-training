{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "allowJs": true,
    "experimentalDecorators": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "reports"
  ]
}
