{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./configuration/declarations"
    ],
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "allowJs": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "build",
    "coverage"
  ]
}
